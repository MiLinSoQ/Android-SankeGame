<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <!--  ↑ ↓ → ← -->

    <Button
        android:id="@+id/handle_control_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="↑"
        app:layout_constraintBottom_toTopOf="@+id/handle_control_left"
        app:layout_constraintEnd_toStartOf="@+id/handle_control_right"
        app:layout_constraintStart_toEndOf="@+id/handle_control_left"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/handle_control_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="↓"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/handle_control_up"
        app:layout_constraintStart_toStartOf="@+id/handle_control_up"
        app:layout_constraintTop_toBottomOf="@+id/handle_control_left" />

    <Button
        android:id="@+id/handle_control_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="←"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/handle_control_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="→"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/handle_control_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintBottom_toTopOf="@+id/handle_control_down"
        app:layout_constraintEnd_toStartOf="@+id/handle_control_right"
        app:layout_constraintStart_toEndOf="@+id/handle_control_left"
        app:layout_constraintTop_toBottomOf="@+id/handle_control_up" />


</merge>